<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/teal_700</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SuggestionsTextStyle">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/theme_black</item>
        <item name="lineHeight">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

    <style name="SuggestionsTextStyle.Header" parent="SuggestionsTextStyle">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="lineHeight">24dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-1.03sp</item>
<!--        <item name="android:textStyle">bold</item>-->
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">10dp</item>
<!--        <item name="android:fontWeight">700</item>-->
    </style>
</resources>