<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/teal_700</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SuggestionsTextStyle">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/theme_black</item>
        <item name="lineHeight">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

    <style name="SuggestionsTextStyle.Header" parent="SuggestionsTextStyle">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="lineHeight">24dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-1.03sp</item>
<!--        <item name="android:textStyle">bold</item>-->
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">10dp</item>
<!--        <item name="android:fontWeight">700</item>-->
    </style>

    <style name="SuggestionsTextStyle.H1" parent="SuggestionsTextStyle">
        <item name="lineHeight">32dp</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="SuggestionsTextStyle.Ticker" parent="SuggestionsTextStyle.Header">
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">0sp</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Stock">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="lineHeight">24dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/theme_black</item>
<!--        <item name="android:fontWeight">700</item>-->
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginStart">12dp</item>
    </style>

    <style name="Stock.Details" parent="Stock">
        <item name="lineHeight">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginStart">12dp</item>
    </style>

    <style name="ChartMark">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="lineHeight">24dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ChartMark.Details" parent="ChartMark">
        <item name="lineHeight">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/star_grey</item>
    </style>

    <style name="DetailedInformationButton" >
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textAlignment">center</item>
        <item name="android:labelTextSize">12sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@drawable/selector_font</item>
        <item name="lineHeight">18sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:button">@null</item>
    </style>

</resources>